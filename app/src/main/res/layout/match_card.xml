<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvMatchCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/xxs"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/xxxxs">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arsenalHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_1"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/chelseaHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chelsea"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/liverpoolHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/liverpool"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/manutdHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manutd"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/player_card"
                android:fontFamily="@font/font2"
                android:gravity="start"
                android:layout_gravity="center"
                android:text="Home Team"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvHomeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/font2"
                android:layout_gravity="center"

                android:text="Home Score"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- "
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvAwayScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font2"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="Away Score"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvAwayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:gravity="center_horizontal"
                android:text="Away Team"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/arsenalAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_1"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/chelseaAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chelsea"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/liverpoolAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/liverpool"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/manutdAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manutd"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>